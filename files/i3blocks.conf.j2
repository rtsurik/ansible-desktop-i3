separator_block_width=14

[battery]
label=
command=/usr/share/i3blocks/battery
color=#0ebc41
interval=10

[ssid]
label=
command=echo "{{ iface_name }} $(/sbin/iw dev {{ iface_name }} link | grep SSID | cut -d " " -f 2-)"
color=#d33682
interval=30

[ipaddr]
instance={{ iface_name }}
command=/usr/share/i3blocks/network
color=#0ebc41
interval=30

[load]
label= 
command=/usr/share/i3blocks/load_average
interval=10
color=#6c71c4

[volume]
label=
command=/usr/share/i3blocks/volume
interval=5
signal=10
color=#8892b1

[time]
label=
command=date '+%l:%M:%S %p'
interval=5
color=#50C878
